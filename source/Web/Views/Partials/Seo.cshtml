@inherits UmbracoViewPage<ISeo>

@* Open Graph *@

@if (!String.IsNullOrEmpty(Model.Pagetitle))
{
    <meta property="og:title" content="@Model.Pagetitle">
}

@if (!String.IsNullOrEmpty(Model.Description))
{
    <meta property="og:description" content="@Model.Description">
}

@if (Model.Image != null)
{
    <meta property="og:image" content="@Model.Image.Url(mode: UrlMode.Absolute)">
}

@if (Model.CanonicalUrl != null)
{
    <meta property="og:url" content="@Model.CanonicalUrl.Url">
}
else
{
    <meta property="og:url" content="@Model.Url(mode: UrlMode.Absolute)">
}